# ============================================
# CyberScore Environment Configuration
# Copy this file to .env and fill in values
# ============================================

# --- Database (PostgreSQL + TimescaleDB) ---
DB_USER=csadmin
DB_PASSWORD=changeme_db_password
CS_DATABASE_URL=postgresql+asyncpg://csadmin:changeme_db_password@postgres:5432/cyberscore

# --- Redis ---
REDIS_PASSWORD=changeme_redis_password
CS_REDIS_URL=redis://:changeme_redis_password@redis:6379/0
CS_CELERY_BROKER_URL=redis://:changeme_redis_password@redis:6379/1

# --- Keycloak (Auth SSO) ---
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme_keycloak
CS_KEYCLOAK_URL=http://keycloak:8080
CS_KEYCLOAK_REALM=cyberscore
CS_KEYCLOAK_CLIENT_ID=cyberscore-api
CS_KEYCLOAK_CLIENT_SECRET=changeme_client_secret
CS_JWT_SECRET_KEY=changeme_jwt_secret
CS_JWT_ALGORITHM=RS256

# --- LLM (Sovereign, self-hosted via vLLM â€” legacy) ---
CS_VLLM_URL=http://localhost:8001
CS_LLM_MODEL=mistralai/Mistral-Large-Instruct-2407

# --- Multi-LLM Provider ---
# Default provider when no DB config exists: mistral|gemini|claude|openai|ollama
CS_LLM_DEFAULT_PROVIDER=mistral
CS_LLM_DEFAULT_MODEL=mistral-large-latest
CS_OLLAMA_BASE_URL=http://localhost:11434

# --- Encryption (for API keys at rest) ---
# Generate with: python -c "import base64; from cryptography.hazmat.primitives.ciphers.aead import AESGCM; print(base64.b64encode(AESGCM.generate_key(bit_length=256)).decode())"
CS_ENCRYPTION_KEY=

# --- Proxy / IP Anonymization (scan origin masking) ---
# Mode: none | tor | socks5 | http | rotating
CS_PROXY_MODE=none
# Tor SOCKS5 proxy (install Tor: apt install tor, then start the service)
CS_PROXY_TOR_URL=socks5://127.0.0.1:9050
# Generic SOCKS5 proxy
CS_PROXY_SOCKS5_URL=
# HTTP/HTTPS proxy
CS_PROXY_HTTP_URL=
# Rotating proxy list (comma-separated)
CS_PROXY_ROTATING_LIST=
# Hosts to bypass proxy (comma-separated, local services auto-bypassed)
CS_PROXY_BYPASS_HOSTS=

# --- OSINT API Keys ---
CS_SHODAN_API_KEY=
CS_CENSYS_API_ID=
CS_CENSYS_API_SECRET=
CS_VIRUSTOTAL_API_KEY=
CS_HIBP_API_KEY=
CS_ABUSEIPDB_API_KEY=

# --- MinIO (Object Storage) ---
MINIO_ROOT_USER=csadmin_minio
MINIO_ROOT_PASSWORD=changeme_minio
CS_MINIO_ENDPOINT=minio:9000
CS_MINIO_ACCESS_KEY=csadmin_minio
CS_MINIO_SECRET_KEY=changeme_minio
CS_MINIO_BUCKET=cyberscore

# --- Qdrant (Vector DB) ---
CS_QDRANT_URL=http://qdrant:6333

# --- App Settings ---
CS_DEBUG=true
CS_CORS_ORIGINS=["http://localhost:3000"]

# --- Monitoring ---
GF_SECURITY_ADMIN_PASSWORD=changeme_grafana

# --- Integrations: Splunk HEC ---
CS_SPLUNK_HEC_URL=
CS_SPLUNK_HEC_TOKEN=

# --- Integrations: ServiceNow ---
CS_SERVICENOW_INSTANCE=
CS_SERVICENOW_USER=
CS_SERVICENOW_PASSWORD=

# --- Integrations: Slack ---
CS_SLACK_WEBHOOK_URL=

# --- Integrations: Microsoft Teams ---
CS_TEAMS_WEBHOOK_URL=

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8000
