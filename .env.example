# ============================================
# MH-CyberScore Environment Configuration
# Copy this file to .env and fill in values
# ============================================

# --- Database (PostgreSQL + TimescaleDB) ---
DB_USER=mhcs
DB_PASSWORD=changeme_db_password
MH_DATABASE_URL=postgresql+asyncpg://mhcs:changeme_db_password@postgres:5432/mh_cyberscore

# --- Redis ---
REDIS_PASSWORD=changeme_redis_password
MH_REDIS_URL=redis://:changeme_redis_password@redis:6379/0
MH_CELERY_BROKER_URL=redis://:changeme_redis_password@redis:6379/1

# --- Keycloak (Auth SSO) ---
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme_keycloak
MH_KEYCLOAK_URL=http://keycloak:8080
MH_KEYCLOAK_REALM=mh-cyberscore
MH_KEYCLOAK_CLIENT_ID=mh-cyberscore-api
MH_KEYCLOAK_CLIENT_SECRET=changeme_client_secret
MH_JWT_SECRET_KEY=changeme_jwt_secret
MH_JWT_ALGORITHM=RS256

# --- LLM (Sovereign, self-hosted via vLLM â€” legacy) ---
MH_VLLM_URL=http://localhost:8001
MH_LLM_MODEL=mistralai/Mistral-Large-Instruct-2407

# --- Multi-LLM Provider ---
# Default provider when no DB config exists: mistral|gemini|claude|openai|ollama
MH_LLM_DEFAULT_PROVIDER=mistral
MH_LLM_DEFAULT_MODEL=mistral-large-latest
MH_OLLAMA_BASE_URL=http://localhost:11434

# --- Encryption (for API keys at rest) ---
# Generate with: python -c "import base64; from cryptography.hazmat.primitives.ciphers.aead import AESGCM; print(base64.b64encode(AESGCM.generate_key(bit_length=256)).decode())"
MH_ENCRYPTION_KEY=

# --- OSINT API Keys ---
MH_SHODAN_API_KEY=
MH_CENSYS_API_ID=
MH_CENSYS_API_SECRET=
MH_VIRUSTOTAL_API_KEY=
MH_HIBP_API_KEY=
MH_ABUSEIPDB_API_KEY=

# --- MinIO (Object Storage) ---
MINIO_ROOT_USER=mhcs_minio
MINIO_ROOT_PASSWORD=changeme_minio
MH_MINIO_ENDPOINT=minio:9000
MH_MINIO_ACCESS_KEY=mhcs_minio
MH_MINIO_SECRET_KEY=changeme_minio
MH_MINIO_BUCKET=mh-cyberscore

# --- Qdrant (Vector DB) ---
MH_QDRANT_URL=http://qdrant:6333

# --- App Settings ---
MH_DEBUG=true
MH_CORS_ORIGINS=["http://localhost:3000"]

# --- Monitoring ---
GF_SECURITY_ADMIN_PASSWORD=changeme_grafana

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
